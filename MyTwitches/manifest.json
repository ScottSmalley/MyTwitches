{
    "name": "MyTwitches",
    "version": "2.0",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": ["https://*.twitch.tv/*"],
            "js": [
                "content.js"
            ]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "MyTwitches"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": ["tabs"]
}